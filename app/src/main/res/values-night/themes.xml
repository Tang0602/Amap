<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Night -->
    <style name="Theme.AmapSim" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color - 高德蓝 -->
        <item name="colorPrimary">@color/amap_blue_light</item>
        <item name="colorPrimaryVariant">@color/amap_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amap_green</item>
        <item name="colorSecondaryVariant">@color/amap_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 边到边显示 -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Splash 主题 - Night -->
    <style name="Theme.AmapSim.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/amap_blue_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AmapSim</item>
    </style>
</resources>