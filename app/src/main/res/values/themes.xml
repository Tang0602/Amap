<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmapSim" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - 高德蓝 -->
        <item name="colorPrimary">#3385FF</item>
        <item name="colorPrimaryVariant">#0066CC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00CC66</item>
        <item name="colorSecondaryVariant">#00994D</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 边到边显示 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Splash 主题 -->
    <style name="Theme.AmapSim.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#3385FF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.AmapSim</item>
    </style>
</resources>